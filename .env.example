# ============================================================
# Environment Configuration — Copy to .env and fill in values
# ============================================================

ENVIRONMENT=development

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0

# Security Configuration
JWT_SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET-IN-PRODUCTION
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRES_MINUTES=60

# ============================================================
# LLM Provider Configuration (REQUIRED — pick one)
# Options: openai, google, groq
# ============================================================
LLM_PROVIDER=groq

# Groq Configuration (FREE & FAST)
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.3-70b-versatile

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
EMBEDDING_MODEL=text-embedding-3-small

# Google AI Configuration (if using Google Gemini)
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-pro
GOOGLE_EMBEDDING_MODEL=models/embedding-001

# ============================================================
# Vector Store Configuration
# Options: chroma (local), pinecone (cloud)
# ============================================================
VECTOR_STORE_TYPE=chroma
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# Pinecone Configuration (if using Pinecone)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=webdocs

# ============================================================
# Database Configuration
# Set USE_FAKE_DB=1 to use in-memory storage (no MongoDB needed)
# Set USE_FAKE_DB=0 to use real MongoDB
# ============================================================
USE_FAKE_DB=1

# MongoDB connection (Atlas) — only needed if USE_FAKE_DB=0
DATABASE_URL=mongodb+srv://user:password@cluster.mongodb.net/?appName=myapp
MONGODB_HOST=cluster0.mongodb.net
MONGODB_PORT=27017
MONGODB_DATABASE=web_crawler
MONGODB_USERNAME=your-username
MONGODB_PASSWORD=your-password

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000,http://localhost:5173

# RAG Configuration
TOP_K=5
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/chatbot.log
